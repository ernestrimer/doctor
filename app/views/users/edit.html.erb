<h1>Edit Patient Info</h1>
<hr />
<%= form_with(model: @user, local: true, class: "ui form") do |f| %>
    <div class="field">
      <h2><%= f.label :Name %></h2>
        <%= f.text_field :first_name, required: true, autofocus: true, placeholder: "First Name" %>
        <%= f.text_field :last_name, required: true, autofocus: true, placeholder: "Last Name" %>
      <h2><%= f.label :Alias %></h2>
        <%= f.text_field :patient_num, required: true, placeholder: "Type Unique Alias" %>
    </div>
  <%= f.submit 'Update Patient Info', class: "ui grey button" %>
  <%= link_to "Delete Patient", @user, method: :delete, class: "ui red button" %>
<% end %>