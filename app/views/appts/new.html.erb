<h1>Add Appointments</h1>
<%= form_with(model: [@doc, @appt], local: true, class: 'ui form') do |f| %>
  <div class="field">
    <%= f.label :user %>
    <%= f.select :user_id, @users.collect { |u| [u.full_name, u.id] } %>
  </div>
  
  <div class="field">
    <%= f.label :Date_and_Time %>
    <%= f.date_field :date, required: true, placeholder: "Date" %>
    <%= f.time_field :time, required: true, placeholder: "Time" %>
  </div>
  <%= f.submit nil, class: "ui blue button" %>
<% end %>